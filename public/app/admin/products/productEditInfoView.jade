form.form-horizontal(name='productForm', novalidate='')
    fieldset
        legend Basic Product Information
        .form-group(ng-class='{"has-error":productForm.inputProductName.$invalid &&\
    productForm.inputProductName.$dirty}')
            label.col-md-2.control-label(for='inputProductName') Product Name
            .col-md-4
                input#inputProductName.form-control(name='inputProductName', type='text', placeholder='Product Name (required)', ng-model='vm.product.productName', required='', ng-minlength='4', ng-maxlength='12')
            span.help-block.has-error
                span(ng-show='productForm.inputProductName.$error.required')
                    | Product name is required.
                span(ng-show='productForm.inputProductName.$error.minlength')
                    | Product name must be at least 4 characters in length.
                span(ng-show='productForm.inputProductName.$error.maxlength')
                    | Product name cannot exceed 12 characters in length.
        .form-group(ng-class='{"has-error":productForm.inputProductCode.$invalid &&\
    productForm.inputProductCode.$dirty}')
            label.col-md-2.control-label(for='inputProductCode') Product Code
            .col-md-4
                input#inputProductCode.form-control(name='inputProductCode', ui-mask='AAA-**** (required)', ng-model='vm.product.productCode', required='')
            span.help-block.has-error(ng-show='productForm.inputProductCode.$invalid ')
                | Product Code is required
        .form-group
            label.col-md-2.control-label(for='inputAvailabilityDate') Availability
            .col-md-4
                .input-group
                    input#inputAvailabilityDate.form-control(type='text', datepicker-popup='MMM dd, yyyy ', is-open='vm.opened', ng-model='vm.product.releaseDate')
                    span.input-group-btn
                        button.btn.btn-default(ng-click='vm.open($event)')
                            i.glyphicon.glyphicon-calendar
                        i.glyphicon.glyphicon-calendar
                    i.glyphicon.glyphicon-calendar
                i.glyphicon.glyphicon-calendar
            i.glyphicon.glyphicon-calendar
        i.glyphicon.glyphicon-calendar
            .form-group
                label.col-md-2.control-label(for='inputDescription') Description
                .col-md-10
                    textarea#inputDescription.form-control(placeholder='Description', rows='3', ng-model='vm.product.description')
                        | </div>
                        | </div>
                        | <div class="form-group">
                        | <div class="col-md-4 col-md-offset-2">
                        | <span>
                        | <button class="btn btn-primary"
                        | style="width:80px;margin-right:10px"
                        | ng-click="vm.submit(productForm.$valid)"
                        | ng-disabled="productForm.$invalid">
                        | Save
                        | </button>
                        | </span>
                        | <span>
                        | <button class="btn btn-default"
                        | style="width:70px"
                        | ng-click="vm.cancel()">
                        | Cancel
                        | </button>
                        | </span>
                        | </div>
                        | </div>
                        | </fieldset>
                        | </form>
