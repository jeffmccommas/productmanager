form.formEdit.form-horizontal(name='productForm', novalidate='novalidate')
    fieldset
        legend Basic Product Information
        .form-group(ng-class="{'has-error':productForm.inputProductName.$invalid && productForm.inputProductName.$dirty}")
            label.col-md-2.control-label(for='inputProductName') Product Name
            .col-md-4
                input.form-control(name='inputProductName', id='inputProductName', type='text', placeholder='Product Name (required)', ng-model='vm.product.productName', required='required', ng-minlength='4', ng-maxlength='30')
            span.help-block.has-error
                div(ng-if='productForm.inputProductName.$invalid && productForm.inputProductName.$dirty', ng-messages='productForm.inputProductName.$error')
                    span(ng-message='required') Product name is required.
                    span(ng-message='minlength') Product name must be at least 4 characters in length.
                    span(ng-message='maxlength') Product name cannot exceed 12 characters in length.

        .form-group(ng-class="{'has-error':productForm.inputProductCode.$invalid && productForm.inputProductCode.$dirty}")
            label.col-md-2.control-label(for='inputProductCode')
             | Product Code
            .col-md-4
                input.form-control(name='inputProductCode', id="inputProductCode" ui-mask='AAA-**** (required)', ng-model='vm.product.productCode', required='required')
            span.help-block.has-error
                div(ng-if='productForm.inputProductCode.$invalid && productForm.inputProductCode.$dirty', ng-messages='productForm.inputProductCode.$error')
                    span(ng-show='productForm.inputProductCode.$invalid ') Product Code is required
        .form-group
            label.col-md-2.control-label(for='inputAvailabilityDate') Availability
            .col-md-4
                .input-group
                    input.form-control(type='text', id="inputAvailabilityDate", datepicker-popup='MMM dd, yyyy ', is-open='vm.opened', ng-model='vm.product.releaseDate')
                    span.input-group-btn
                        button.btn.btn-default(ng-click='vm.open($event)')
                            i.fa.fa-calendar
        .form-group
            label.col-md-2.control-label(for='inputDescription') Description
            .col-md-10
                textarea.form-control(placeholder='Description', id="inputDescription", rows='3', data-ng-model='vm.product.description')
        .form-group
            .col-md-4.col-md-offset-2
                span
                    button.btn.btn-primary(style='margin-right: 10px;', ng-click='vm.submit(productForm.$valid)', data-ng-disabled='productForm.$invalid')
                        | Save
                span
                    button.cancleBtn.btn.btn-danger(ng-click='vm.cancel()')
                        | Cancel